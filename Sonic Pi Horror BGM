#Sound effect
at 150 do
  with_fx :echo do
    1.times do
      sample sound1, amp: 1
      sleep 20
      1.times do
        sample sound2, amp: 1
        sleep 14
        1.times do
          sample sound3, amp: 1
          sleep 17
          1.times do
            sample sound4, amp: 1
            sleep 26
            1.times do
              sample sound5, amp: 1
              sleep 100
            end
          end
        end
      end
    end
  end
end


